#!/bin/bash
#
#See skript liidab kokku k천ik 1-10 vahemikus olevad paarisarvud
#
summa=0
for (( arv=1; arv<11; arv++ ))
#lisab alg arvule 1 arvu juurde ja l천petab kui see arv j천uab 10
do
	jaak=$(($arv % 2))
	if [ $jaak -eq 0 ]; then
		summa=$(($summa + $arv))
		echo $summa
#Kontrollib kas arv on paarisarv ja liidab arvu kui see on
fi
done
echo "Paarisarvude summa vahemikus 1-10 on: $summa"
#Annab kasutajale vastuse
#skripti l천pp
